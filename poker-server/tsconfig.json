{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",

    "rootDirs": ["./"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["server.ts", "leaderboardAbi.ts", "dealerAbi.ts"],
  "exclude": ["node_modules"]
}
